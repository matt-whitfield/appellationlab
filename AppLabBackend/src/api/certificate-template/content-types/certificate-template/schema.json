{
  "kind": "collectionType",
  "collectionName": "certificate_templates",
  "info": {
    "singularName": "certificate-template",
    "pluralName": "certificate-templates",
    "displayName": "Certificate Template"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "templateHtml": {
      "type": "richtext"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "certificate": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::certificate.certificate",
      "inversedBy": "certificate_template"
    }
  }
}
